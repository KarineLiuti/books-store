<html>
    <head>
        <meta charset="utf-8">
    </head>
    <body>
        <h1> Books List </h1>

        <table id="books">
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Price</td>
                <td>Edit</td>
                <td>Remove</td>
            </tr>
                <tr id="book_${book.id}" for (book in data.books)>
                <td>${book.id}</td>
                <td>${book.titulo}</td>
                <td>${book.preco}</td>
                <td><a href="/books/find/${book.id}">Edit</a></td> 
                <td><a href="#" data-ref="${book.id}" data-type="remove">Remove</a></td> 
            </tr>
        </table> 
        <script src="static/js/remove-books.js" />
    </body> 
</html>